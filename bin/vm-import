#!/bin/bash

VM_RAM=${VM_RAM:-512} # RAM in MiB
VM_DIRECTORY=${VM_DIRECTORY:-/var/lib/libvirt/images} # Directory to allocate VM image file

if [  $# -ne 1 ]; then
	echo "Usage: $0 guest-name"
	exit 1
fi

if [ -z "$ANSIBLE_VARS_SOURCED" ]; then
	echo "Error: did you 'source ansible-vars'?"
	exit 1
fi

virt-install \
	--nographics \
	--connect=qemu:///system \
	--name=${1} \
	--ram=$VM_RAM \
	--disk $VM_DIRECTORY/${1}.img \
	--import \
	--os-type=linux \
	--virt-type=kvm \
	--network bridge:ffhibr0 \
